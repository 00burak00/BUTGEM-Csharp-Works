@model IEnumerable<Code_first.Models.Not>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ogrenciye_gore_not_getir</title>
</head>
<body>
    <p>

    </p>
    <table class="table">
        @using (Html.BeginForm())
        {
        <tr><td>Öğrenci Seçiniz:</td>
        <td>@Html.DropDownList("ogno",null,"Seçiniz",new {onchange="this.form.submit()" }) </td></tr>
        }
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ders.ders_adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ogrenci.ad_soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.yaz1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.yaz2)
        </th>
        <th>Ortalama</th>
        <th>Durum</th>
    </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ders.ders_adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ogrenci.ad_soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yaz1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.yaz2)
        </td>
        <td>
            @{
                var ort = (item.yaz1 + item.yaz2) / 2;
            }
            @ort
        </td>
        <td>
            @if (ort >= 50)
            {
                <b>Geçti</b>
            }
            else
            {
                <b>kaldı</b>
            }

        </td>
    </tr>
                    }
    
    </table>
</body>
</html>
